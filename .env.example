# Environment Variables Template for Kira Media
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kira_media
POSTGRES_USER=kira_user
POSTGRES_PASSWORD=kira_password_2024
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# Redis Configuration
REDIS_PASSWORD=
REDIS_MAX_MEMORY=512mb

# MinIO Configuration
MINIO_ROOT_USER=kira_minio_user
MINIO_ROOT_PASSWORD=kira_minio_password_2024
MINIO_DOMAIN=localhost

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@kiramedia.com
PGADMIN_DEFAULT_PASSWORD=admin_password_2024
PGADMIN_CONFIG_SERVER_MODE=False
PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED=False

# Application Configuration
NODE_ENV=development
DATABASE_URL=postgresql://kira_user:kira_password_2024@postgres:5432/kira_media
REDIS_URL=redis://redis:6379
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=kira_minio_user
MINIO_SECRET_KEY=kira_minio_password_2024
MINIO_BUCKET=kira-media
MINIO_USE_SSL=false

# Docker Network Configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16
